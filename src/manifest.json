/*
The version number is automatically incremented by build.sh
    Note:
        In order to deploy this to google extension gallery, must remove all comments and the update url
        Consider altering 'deploy' script to handle this
*/

{
  "name": "bit.ly | a simple URL Shortner",
  "version": "0.1.3.9",
  "options_page": "options.html",
  "description": "Shorten, share and track your urls",
  //"default_locale": "en",
  "background_page": "background.html",
  "browser_action": {
    "default_title": "bit.ly",  
    "default_icon": "bitly.png"
  },
  "icons" : { 
    "16" : "s/graphics/bitly_fish_16.png",
    "48" : "s/graphics/bitly_fish_48.png",
    "128" : "s/graphics/bitly_fish_128.png"    
  },
  "permissions": [
    "http://*/*", 
    "http://api.bit.ly/",
    "https://*.bit.ly/",
    "tabs", 
    "unlimited_storage"     
  ],
  
  "content_scripts": [
    {
     "matches": ["http://*/*"],
     "js": ["js/content_plugins/bitly.dispatcher.js"]   
    }
  ]
}